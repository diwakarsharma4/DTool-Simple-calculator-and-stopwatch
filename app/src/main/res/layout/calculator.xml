<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".calculator"
    android:background="@color/matt">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity=""
        android:paddingEnd="0dp"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:padding="2dp"
        android:text="" />

    <TextView
        android:id="@+id/inPutTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/outPutTxt"
        android:gravity="end"
        android:paddingEnd="15dp"
        android:paddingStart="0dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:padding="20dp" />


    <TextView
        android:id="@+id/outPutTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons"
        android:gravity="end"
        android:paddingEnd="15dp"
        android:paddingStart="0dp"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:padding="25dp" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="bottom" >

        <LinearLayout
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/btn_C"
                android:text="AC"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_bra"
                android:text="( )"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_Per"
                android:text="%"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_Del"
                android:text="DE"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/btn_7"
                android:text="7"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_8"
                android:text="8"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_9"
                android:text="9"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_di"
                android:text="/"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/btn_4"
                android:text="4"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_5"
                android:text="5"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_6"
                android:text="6"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_mul"
                android:text="x"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/btn_1"
                android:text="1"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_2"
                android:text="2"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_3"
                android:text="3"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_min"
                android:text="-"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginTop="0dp" >

            <Button
                android:id="@+id/btn_0"
                android:text="0"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_poi"
                android:text="."
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_equ"
                android:text="="
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/black"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_plu"
                android:text="+"
                android:textSize="15pt"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_height="42pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/matt"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>